{% extends 'base.html.twig' %}
{% form_theme formUser 'bootstrap_4_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
 <section id="space">
  </section>
    <section id="services" class="services">
      <div class="container">
           <div class="section-title" data-aos="fade-in" data-aos-delay="100">
          <h2>Inscription</h2>
        </div>
    </section>
      <div class="col-lg-6">
              <div class="form-row">
                <div class="col-md-6 form-group">
{{ form_start(formUser) }}
    {{ form_row(formUser.login, { 'label':'Login : ','attr': {'placeholder': "Votre login"}})}}
    {{ form_row(formUser.mail, { 'label':'Mail : ','attr': {'placeholder': "Votre mail"}})}}
    {# {{ form_row(form.images, { 'label':'Avatar : ','attr': {'placeholder': "Choisissez une image"}})}} #}
    {{ form_row(formUser.password, { 'label':'Mot de passe : '})}}
    {{ form_row(formUser.confirm_password, { 'label':'Confirmation du mot de passe : '})}}
    <button type="submit" class="btn btn-success">S'inscrire</button>
{{ form_end(formUser) }}
</div>
</div>
</div>

{% endblock %}