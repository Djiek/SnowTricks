{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
 <section id="space">
  </section>
    <section id="services" class="services">
      <div class="container">
           <div class="section-title" data-aos="fade-in" data-aos-delay="100">
          <h2>Connexion</h2>
        </div>
    </section>



<form action="{{ path('security_login') }}" method="post">
    <div class="form-group">
        <input placeholder="Adresse mail : " type="text" required name="_username" class="form-control">
    </div>
     <div class="form-group">
        <input placeholder="Mot de passe : " type="password" required name="_password" class="form-control">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success"> Connexion </button>
    </div>
</form>

<h5> Pas encore de compte ? Inscrivez vous ! </h5>
<a href="{{path('security_registration')}}" class="btn btn-primary">Inscription</a>
{% endblock %}